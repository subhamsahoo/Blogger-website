<h1>Comments</h1>

<table class="table">
    <thead>
    <tr>

        <th>Owner</th>
        <th>comment</th>
        <th>Status</th>
        <th>Date</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each comments}}
    <tr>

        <td>{{user.firstName}}</td>
        <td>{{body}}</td>
        <td><input  data-id="{{id}}" {{#if approveComment}} checked {{/if}} type="checkbox" name="approveComment"></td>
        <td>{{generateTime date 'MMMM Do YYYY'}}</td>
        <td>
            <form action="/admin/comments/{{id}}?_method=Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>