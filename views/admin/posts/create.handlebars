<h1>Create Post</h1>

{{#each errors}}

    <div class="alert alert-danger">

        {{message}}

    </div>



{{/each}}

<form action="/admin/posts/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title"> Title </label>
        <input type="text" class="form-control" id="title" placeholder="Enter the title" name="title" required>
    </div>

    <div class="form-group">
        <label for="file"> File Upload </label>
        <input type="file" class="form-control" id="file" name="file" required>
    </div>

    <div class="form-group">
        <label for="category"> Category </label>
        <select name="category" id="category" class="form-control">
            {{#each categories}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>


    <div class="form-group">
        <label for="status"> Status </label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private ">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments" class="form-check-label">
        <input type="checkbox" class="form-check-input" id="allowComments" name="allowComments">
            Allow Comments
        </label>
    </div>

        <label for="body"> Body </label>
        <textarea name="body" id="body" required>
            &lt;p&gt;This is some sample content.&lt;/p&gt;
        </textarea>


    <button type="submit" class="btn btn-primary">Create Post</button>

</form>